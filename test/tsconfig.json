{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "noEmit": true,
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@src/*": ["src/*"]
    },
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  },
  "references": [
    {
      "path": ".."
    }
  ],
  "include": ["**/*.ts", "**/*.tsx", "setup.js", "../src/**/*"],
  "exclude": ["node_modules", "sample"]
}
