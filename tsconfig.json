{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@test/*": ["test/*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDirs": ["./src", "./test"],
    "declaration": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["src/**/*", "test/**/*", "test/types/**/*"],
  "exclude": ["node_modules", "build", "coverage", "test-report"]
}
