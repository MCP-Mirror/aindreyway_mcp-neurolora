{
  "name": "@aindreyway/mcp-neurolora",
  "version": "1.4.0",
  "description": "An MCP server for collecting and documenting code from directories",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-neurolora": "build/index.js"
  },
  "scripts": {
    "prebuild": "npm run validate",
    "build": "tsc && node scripts/copy-templates.js && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "postbuild": "echo 'âœ¨ Build completed successfully! Test report available at ./test-report/index.html'",
    "start": "node build/index.js",
    "dev": "cross-env NODE_ENV=development NODE_OPTIONS=\"--loader ts-node/esm\" node --experimental-specifier-resolution=node src/index.ts",
    "validate": "npm-run-all --silent type-check lint test:ci",
    "test": "cross-env NODE_ENV=test JEST_SILENT=true NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "test:ci": "cross-env NODE_ENV=test JEST_SILENT=true NODE_OPTIONS=--experimental-vm-modules jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:tools": "cross-env NODE_ENV=test JEST_SILENT=true NODE_OPTIONS=--experimental-vm-modules jest test/tools-integration.test.js",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:report": "npm run test:coverage && open-cli test-report/index.html",
    "lint": "eslint src/**/*.ts --quiet",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit --pretty false",
    "update-version": "node scripts/update-version.js",
    "version": "npm run update-version && git add -A",
    "prepublishOnly": "npm run build",
    "precommit": "npm run validate",
    "prepare": "husky install",
    "clean": "rimraf build test-report .neurolora coverage",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json"
  },
  "keywords": [
    "mcp",
    "documentation",
    "code-collection"
  ],
  "author": "aindreyway",
  "license": "MIT",
  "dependencies": {
    "@dqbd/tiktoken": "1.0.18",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@octokit/rest": "21.0.2",
    "@types/uuid": "10.0.0",
    "chalk": "5.3.0",
    "cli-progress": "3.12.0",
    "openai": "4.77.0",
    "tiktoken": "1.0.18",
    "uuid": "11.0.3",
    "winston": "3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@types/jest": "29.5.14",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "babel-jest": "^29.7.0",
    "cross-env": "7.0.3",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-html-reporter": "3.10.2",
    "jest-junit": "16.0.0",
    "jest-summary-reporter": "0.0.2",
    "npm-run-all": "^4.1.5",
    "open-cli": "8.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
